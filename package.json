{
  "name": "h-reader",
  "displayName": "h-reader",
  "description": "用来摸鱼或学习的小说阅读插件,支持在线搜索和本地阅读,支持txt和epub格式",
  "keywords": [
    "epub",
    "reader",
    "阅读",
    "小说",
    "摸鱼"
  ],
  "publisher": "aooiu",
  "version": "1.0.3",
  "icon": "static/images/icon-green.png",
  "qna": "https://github.com/aooiuu/z-reader.git/issues",
  "bugs": {
    "url": "https://github.com/aooiuu/z-reader.git/issues",
    "email": "aooiu@qq.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aooiuu/z-reader.git"
  },
  "engines": {
    "vscode": "^1.39.0"
  },
  "categories": [
    "Other",
    "Extension Packs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "h-reader.command.refresh",
        "title": "本地",
        "category": "h-reader"
      },
      {
        "command": "h-reader.command.searchOnline",
        "title": "在线",
        "category": "h-reader"
      },
      {
        "command": "h-reader.command.openLocalDirectory",
        "title": "打开本地文件目录",
        "category": "h-reader"
      },
      {
        "command": "h-reader.command.setOnlineSite",
        "title": "更改在线网站来源",
        "category": "h-reader"
      },
      {
        "command": "h-reader.command.setEncoding",
        "title": "设置编码",
        "category": "h-reader"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "treeView",
          "title": "小说",
          "icon": "static/images/icon.svg"
        }
      ]
    },
    "views": {
      "treeView": [
        {
          "id": "local",
          "name": "目录"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "h-reader.command.refresh",
          "when": "view == local",
          "group": "navigation"
        },
        {
          "command": "h-reader.command.searchOnline",
          "when": "view == local",
          "group": "navigation"
        },
        {
          "command": "h-reader.command.openLocalDirectory",
          "when": "view == local"
        },
        {
          "command": "h-reader.command.setOnlineSite",
          "when": "view == local"
        },
        {
          "command": "h-reader.command.setEncoding",
          "when": "view == local"
        }
      ],
      "view/item/context": [
        {
          "command": "h-reader.command.openLocalDirectory",
          "when": "view == local"
        },
        {
          "command": "h-reader.command.setOnlineSite",
          "when": "view == local"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "h-reader",
      "properties": {
        "h-reader.fileDir": {
          "type": "string",
          "description": "本地小说目录"
        },
        "h-reader.onlineSite": {
          "type": "string",
          "default": "起点",
          "enum": [
            "起点",
            "笔趣阁"
          ],
          "description": "在线搜索来源网站"
        },
        "h-reader.encoding": {
          "type": "string",
          "default": "utf8",
          "enum": [
            "utf8",
            "gbk"
          ],
          "description": "txt文件打开编码"
        }
      }
    }
  },
  "activationEvents": [
    "*"
  ],
  "scripts": {
    "build": "vsce package",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.13",
    "@types/glob": "^7.1.1",
    "@types/got": "^9.6.9",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.39.0",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode-test": "^1.2.0"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "epub": "^1.2.0",
    "got": "^9.6.0",
    "iconv-lite": "^0.5.0",
    "open": "^7.0.0"
  }
}
